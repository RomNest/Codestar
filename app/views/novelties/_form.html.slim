#form
	.wrapper_skinny

		= form_for @novelty do |f|
			#errors_wrapper
				- if @novelty.errors.any?
					h2 
						= pluralize(@novelty.errors.count, "error")
					ul
						- @novelty.errors.full_messages.each do |msg|
							p = msg
			.form_in
				= f.label "Tile:"
				= f.text_field :title, :autofocus => true, class: "form-control", placeholder: "Title."
			.form_in
				= f.label "Description:"
				= f.text_area :description, class: "form-control", placeholder: "Description"
			.form_in
				= f.label "Upload image:"
				br
				span.btn.button.btn-file
					= f.label "Browse", class: "browse_image input-group", for: "file_field"
					= f.file_field :image, id: "file_field"
				#img_block
					img#img-upload /
			.form_in
				= f.submit "Create a vacancy", remote: true, class:"btn button btn-block"
